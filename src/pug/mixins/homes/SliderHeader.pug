mixin Slider(value) 
  .swiper-slide
    +Background({ image: `${CWD}assets/img/${value.img}` })
    .container 
      .row.min-vh-100.py-8.align-items-center
        .col-sm-8.col-lg-7.px-5.px-sm-3 
          h1.fs-4.fs-md-5.lh-1= value.title
          p.text-primary.pt-4.mb-5.fs-1.fs-md-2(style="line-height: 1.15;")= value.text

          a(href=`${value.link}`).btn.btn-primary.me-3.mt-3 Read more
            span.fas.fa-chevron-right.ms-2
          a(href="contact.html").btn.btn-warning.mt-3 Contact us
            span.fas.fa-chevron-right.ms-2
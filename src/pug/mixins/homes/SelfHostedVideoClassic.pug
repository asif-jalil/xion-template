mixin SelfHostedVideoClassic
  +Section({
    image: `${CWD}assets/img/video-1.png`, 
    video: {
      mp4: `${CWD}assets/videos/morning-routine/video`,
      webm: `${CWD}assets/videos/morning-routine/video`,
    }
  })(data-zanim-timeline!={} data-zanim-trigger="scroll").text-white.py-0
    .row.py-8.align-items-center(data-inertia!={weight: 1.5})
      .col-sm-8.col-lg-7

        .overflow-hidden
          h1.fs-4.fs-md-5.zopacity(data-zanim-xs!={delay:0.5}) Expert Consultants

        .overflow-hidden
          p.text-primary.mt-4.mb-5.fs-1.fs-md-2.zopacity(style="line-height: 1.15;" data-zanim-xs!={delay:0.6}) Over 10 years of experience in helping clients finding comprehensive solutions.


        .overflow-hidden
          .zopacity(data-zanim-xs!={delay: 0.7})
            a(href="#!").btn.btn-primary.me-3.mt-3 Read more
              span.fas.fa-chevron-right.ms-2
            a(href="/contact.html").btn.btn-warning.mt-3 Contact us
              span.fas.fa-chevron-right.ms-2
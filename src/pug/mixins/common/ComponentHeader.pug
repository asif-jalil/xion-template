mixin ComponentHeader(config) 
  .row.text-center&attributes(attributes)
    .col.position-relative
      h3.fs-2.fs-md-3.fw-semi-bold #{config.title}
      if config.desc 
        p.px-lg-4.mt-3 #{config.desc}
      hr.short(data-zanim!={from:{opacity: 0, width: 0}, to:{opacity: 1, width: "4.20873rem"}, duration:0.8} data-zanim-trigger="scroll")
